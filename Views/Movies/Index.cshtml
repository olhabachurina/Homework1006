@model IEnumerable<Homework1006.Models.Movie>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Top 10 Movies</title>
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <div class="container">
        <h1 class="styled-title">Top 10 Movies</h1>
        <div class="row justify-content-center">
            @foreach (var movie in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="movie-card h-100 d-flex flex-column fade-in-up">
                        <img src="@movie.PosterPath" class="movie-poster" alt="@movie.Title">
                        <div class="movie-info flex-grow-1">
                            <h2 class="movie-title">@movie.Title</h2>
                            <p><strong>Genre:</strong> @movie.Genre</p>
                            <p><strong>Director:</strong> @movie.Director</p>
                            <p><strong>Year:</strong> @movie.Year</p>
                            <p>@movie.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div> 
    <script src="~/js/site.js"></script>
</body>
</html>